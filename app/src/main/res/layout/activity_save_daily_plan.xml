<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.e_lista.DailyPlans.SaveDailyPlan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:id="@+id/tvIdSaveDailyPlan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etIdSaveDailyPlan"
        android:layout_below="@+id/tvIdSaveDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Od"
        android:id="@+id/tvPlanFromSaveDailyPlan"
        android:layout_below="@+id/etIdSaveDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlanFromSaveDailyPlan"
        android:layout_below="@+id/tvPlanFromSaveDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etIdSaveDailyPlan"
        android:layout_alignEnd="@+id/etIdSaveDailyPlan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Do"
        android:id="@+id/tvPlanToSaveDailyPlan"
        android:layout_below="@+id/etPlanFromSaveDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlanToSaveDailyPlan"
        android:layout_below="@+id/tvPlanToSaveDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etIdSaveDailyPlan"
        android:layout_alignEnd="@+id/etIdSaveDailyPlan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/tvEmailSaveDailyPlan"
        android:layout_below="@+id/etPlanToSaveDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEmailSaveDailyPlan"
        android:layout_below="@+id/tvEmailSaveDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etPlanToSaveDailyPlan"
        android:layout_alignEnd="@+id/etPlanToSaveDailyPlan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:id="@+id/btnSaveSaveDailyPlan"
        android:layout_below="@+id/etEmailSaveDailyPlan"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
