<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.e_lista.WorkTime.SaveWorkTimeUsingPlan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dzień"
        android:id="@+id/tvDayWorkTimeUP"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDayWorkTimeUP"
        android:layout_below="@+id/tvDayWorkTimeUP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:id="@+id/tvIdWorkTimeUP"
        android:layout_below="@+id/etDayWorkTimeUP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etIdWorkTimeUP"
        android:layout_below="@+id/tvIdWorkTimeUP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etDayWorkTimeUP"
        android:layout_alignEnd="@+id/etDayWorkTimeUP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Użytkownika"
        android:id="@+id/tvUserIdWorkTimeUP"
        android:layout_below="@+id/etIdWorkTimeUP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etUserIdWorkTimeUP"
        android:layout_below="@+id/tvUserIdWorkTimeUP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etIdWorkTimeUP"
        android:layout_alignEnd="@+id/etIdWorkTimeUP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zakres Pracy"
        android:id="@+id/tvWorksDoneWorkTimeUP"
        android:layout_below="@+id/etUserIdWorkTimeUP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etWorksDoneWorkTimeUP"
        android:layout_below="@+id/tvWorksDoneWorkTimeUP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etUserIdWorkTimeUP"
        android:layout_alignEnd="@+id/etUserIdWorkTimeUP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:id="@+id/btnSaveSaveWorkTimeUP"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etWorksDoneWorkTimeUP" />
</RelativeLayout>
