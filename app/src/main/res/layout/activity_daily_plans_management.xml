<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.e_lista.DailyPlans.DailyPlansManagement">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokaż Dziennik Planów"
        android:id="@+id/btnShowDailyPlan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokaż Wszystkie Dzienniki Planów"
        android:id="@+id/btnShowAllDailyPlans"
        android:layout_below="@+id/btnShowDailyPlan"
        android:layout_alignRight="@+id/btnShowDailyPlan"
        android:layout_alignEnd="@+id/btnShowDailyPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz Dziennik Planów"
        android:id="@+id/btnSaveDailyPlan"
        android:layout_below="@+id/btnShowAllDailyPlans"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnShowAllDailyPlans"
        android:layout_alignEnd="@+id/btnShowAllDailyPlans" />

</RelativeLayout>
