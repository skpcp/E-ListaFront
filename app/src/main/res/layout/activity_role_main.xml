<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.e_lista.Role.RoleMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Role Menagment"
        android:id="@+id/tvRoleMenagment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find All Roles"
        android:id="@+id/btnFindAllRoles"
        android:layout_below="@+id/tvRoleMenagment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Role&apos;s Name"
        android:id="@+id/btnEditRolesName"
        android:layout_below="@+id/btnFindAllRoles"
        android:layout_alignLeft="@+id/tvRoleMenagment"
        android:layout_alignStart="@+id/tvRoleMenagment"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Role By Name"
        android:id="@+id/btnFindRoleByName"
        android:layout_below="@+id/btnEditRolesName"
        android:layout_alignRight="@+id/tvRoleMenagment"
        android:layout_alignEnd="@+id/tvRoleMenagment"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Role"
        android:id="@+id/btnDeleteRole"
        android:layout_below="@+id/btnFindRoleByName"
        android:layout_alignLeft="@+id/tvRoleMenagment"
        android:layout_alignStart="@+id/tvRoleMenagment"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
