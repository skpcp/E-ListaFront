<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.e_lista.Absence.FindByUserType">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find by type and user"
        android:id="@+id/tvAbsenceFindByTypeAndUser"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type of absence"
        android:id="@+id/tvAbsenceTypeOfAbsenceFind"
        android:layout_below="@+id/tvAbsenceFindByTypeAndUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAbsenceTypeOfAbsenceFind"
        android:layout_below="@+id/tvAbsenceTypeOfAbsenceFind"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User ID"
        android:id="@+id/tvAbsenceTypeOfAbsenceUserId"
        android:layout_below="@+id/etAbsenceTypeOfAbsenceFind"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etAbsenceTypeOfAbsenceUserID"
        android:layout_below="@+id/tvAbsenceTypeOfAbsenceUserId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etAbsenceTypeOfAbsenceFind"
        android:layout_alignEnd="@+id/etAbsenceTypeOfAbsenceFind" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/btnAbsenceFindByTypeAndUserID"
        android:layout_below="@+id/etAbsenceTypeOfAbsenceUserID"
        android:layout_toRightOf="@+id/tvAbsenceTypeOfAbsenceFind"
        android:layout_toEndOf="@+id/tvAbsenceTypeOfAbsenceFind" />
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAbsenceFindByTypeAndUserID"/>
</RelativeLayout>
